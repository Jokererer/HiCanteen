<UserControl x:Class="OwnControl.OrderDishes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OwnControl"
               mc:Ignorable="d" Width="403" Height="127.55">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Height="116" Margin="0,0,320,0" VerticalAlignment="Top" Name="DishImage"  />
        <Label Content="菜名：" HorizontalAlignment="Left" Margin="143,11,0,0" VerticalAlignment="Top" Width="39" FontSize="13px"  Height="25" />
        <Label Content="价格：￥" HorizontalAlignment="Left" Margin="143,36,0,64" FontSize="11"  Width="52" VerticalAlignment="Top"/>
        <Label Content="数量：" HorizontalAlignment="Left" Margin="143,79,0,0" VerticalAlignment="Top" FontSize="11" Height="23" Width="41" RenderTransformOrigin="0.582,0.267" />
        <Button Content="-" HorizontalAlignment="Left" Margin="189,82,0,0" VerticalAlignment="Top" Width="15" FontSize="10" Height="15" RenderTransformOrigin="-9.583,-0.117" Name="LoseButton" Click="LoseButton_Click" />
        <Label Content="0" HorizontalAlignment="Left" Margin="209,79,0,0" VerticalAlignment="Top" Width="20" FontSize="10" Height="20" Name="NumLabel" />
        <Button Content="+" HorizontalAlignment="Left" Margin="234,82,0,0" VerticalAlignment="Top" Width="15" FontSize="10" Height="15" RenderTransformOrigin="3.795,0.777" Name="AddButton" Click="AddButton_Click" />
        <Label Content="月销量：" HorizontalAlignment="Left" Margin="143,58,0,0" VerticalAlignment="Top" FontSize="9" Width="40" />
        <Label Content="XXX" HorizontalAlignment="Left" Margin="182,11,0,0" VerticalAlignment="Top"  FontSize="13px" Name="DishnameLabel"/>
        <Label  Content="价格设置" HorizontalAlignment="Left" Margin="187,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.423,0.4" Name="SalesvalueLabel" FontSize="11px" />
        <Label Content="销量设置" HorizontalAlignment="Left" Margin="183,58,0,0" VerticalAlignment="Top" FontSize="9px" RenderTransformOrigin="0.758,0.476" Name="SalesNumLabel"/>


    </Grid>
</UserControl>
