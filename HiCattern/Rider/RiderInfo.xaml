<Window x:Class="HiCattern.Rider.RiderInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HiCattern.Rider"
        mc:Ignorable="d"
        Title="个人信息" Height="571.382" Width="932.445">
    <Grid Margin="0,0,-6.667,-2.635" Height="544.684" VerticalAlignment="Top">
        <Grid.Background>
            <ImageBrush ImageSource="riderbackground.jpg"/>
        </Grid.Background>
        <Label Content="修改密码" HorizontalAlignment="Left" Height="32.301" Margin="233.225,243.243,0,0" VerticalAlignment="Top" Width="110.115" Foreground="#FFEFE7E7" FontSize="16"/>
        <Label Content="手机号码：" HorizontalAlignment="Left" Height="36" Margin="536,118,0,0" VerticalAlignment="Top" Width="128" Background="{x:Null}" Foreground="#FF141313" FontSize="14"/>
        <TextBox x:Name="txt_Phone" HorizontalAlignment="Left" Height="30" Margin="530,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224"/>
        <Label Content="密码：" HorizontalAlignment="Left" Height="36" Margin="543,230,0,0" VerticalAlignment="Top" Width="128" Foreground="#FF0A0A0A" FontSize="14"/>
        <TextBox x:Name="txt_Passwd" HorizontalAlignment="Left" Height="30" Margin="536,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224"/>
        <Button x:Name="btnOk_updateInfo" Style="{StaticResource MyButton}" Content="修改" HorizontalAlignment="Left" Height="32" Margin="526,350,0,0" VerticalAlignment="Top" Width="75" Foreground="#FF0E0E0E" Background="#FF7FA4C8" FontSize="14" Click="btnOk_updateInfo_Click"/>
        <Button x:Name="btn_cancel" Content="取消" HorizontalAlignment="Left" Margin="703,350,0,0" VerticalAlignment="Top" Width="75" Click="btn_cancel_Click" BorderBrush="{x:Null}" Background="#FF7FA4C8"/>

    </Grid>
</Window>
